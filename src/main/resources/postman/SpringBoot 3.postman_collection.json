				{
					"name": "signin",
					"item": [
						{
							"name": "Authenticates a user and returns a token",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"if (pm.response.code >= 200 && pm.response.code <= 299) {\r",
											"    try {\r",
											"        // Parseando a resposta como JSON\r",
											"        var jsonData = pm.response.json();\r",
											"        \r",
											"        // Log para verificar o conteúdo retornado\r",
											"        console.log(\"Resposta JSON:\", jsonData);\r",
											"        \r",
											"        // Setando os tokens no ambiente\r",
											"        if (jsonData.accessToken && jsonData.refreshToken) {\r",
											"            pm.environment.set(\"accessToken\", jsonData.accessToken);\r",
											"            pm.environment.set(\"refreshToken\", jsonData.refreshToken);\r",
											"            console.log(\"Tokens salvos com sucesso!\");\r",
											"        } else {\r",
											"            console.log(\"Os campos accessToken ou refreshToken não foram encontrados na resposta.\");\r",
											"        }\r",
											"    } catch (e) {\r",
											"        console.log(\"Erro ao processar a resposta JSON:\", e);\r",
											"    }\r",
											"} else {\r",
											"    console.log(\"A resposta não foi bem-sucedida. Código:\", pm.response.code);\r",
											"}\r",
											""
										],
										"type": "text/javascript",
										"packages": {}
									}
								}
